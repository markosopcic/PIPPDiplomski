<html>
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cesium.com/downloads/cesiumjs/releases/1.63/Build/Cesium/Cesium.js"></script>
    <link href="https://cesium.com/downloads/cesiumjs/releases/1.63/Build/Cesium/Widgets/widgets.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>
</head>
<body>
    <div id="navbar">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="height:6%">
            <a class="navbar-brand" href="#">Projekt</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div style="margin-left:10%" class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="btn nav-link" style="white-space: nowrap;" onclick="toLiveTracking()">Live tracking </a>
                    </li>
                    <li  class="nav-item">
                        <a class="btn nav-link" data-toggle="modal" data-target="#historymodal">History</a>
                    </li>

                </ul>
            </div>
        </nav>
    </div>
    <div id="app">
        <input id="user-search" style="width:15%;height:4%;position:fixed;left:0px;float:left;z-index:99 !important" class="form-control" placeholder="Search users..." />
        <div id="active-users" style="height:100%;width:15%;padding-top:2%;position:fixed;left:0px;float:left;overflow-y:scroll;-ms-overflow-style:none;">
            <style>
                ::-webkit-scrollbar {
                    width: 0px;
                    background: transparent;
                }
            </style>



        </div>
        <div style="width:85%;height:94%;float:right">
            <div id="cesiumContainer"></div>
        </div>
    </div>

    <div class="modal fade" id="historymodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="historymodallabel">Movement history</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div>
                        <select style="width:100%" id="history-users" class="form-control" multiple placeholder="Select users" ></select>
                    </div>
                        <label for="date-from">From:</label>
                        <div>
                            <input class="form-control" style="width:50%;float:left" type="date" id="date-from" />
                            <input class="form-control" style="width:50%;float:left" type="time" id="time-from" />
                        </div>
                        <label>To:</label>
                        <div>

                            <input class="form-control" style="width:50%;float:left" type="date" id="date-to" />
                            <input class="form-control" style="width:50%;float:left" type="time" id="time-to" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" onclick="canceledLoadingClicked()" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" id="history-confirm" class="btn btn-primary">Show History</button>
                        </div>
</div>
        </div>
    </div>
        </div>
</body>

</html>

